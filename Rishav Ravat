            // Smooth scrolling for navigation links
            document.querySelectorAll('nav a').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();

                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });

            // Simple "Add to Cart" alert (replace with actual cart logic)
            document.querySelectorAll('.add-to-cart-btn').forEach(button => {
                button.addEventListener('click', () => {
                    // In a real application, this would add the item to a shopping cart
                    // and update a cart icon/total.
                    alert('Item added to cart! (This is a demo, actual cart functionality requires more code.)');
                });
            });

            // Basic delivery availability check (placeholder)
            const deliveryForm = document.querySelector('.delivery-check-form');
            if (deliveryForm) {
                deliveryForm.addEventListener('submit', (e) => {
                    e.preventDefault();
                    const input = deliveryForm.querySelector('.delivery-input');
                    const address = input.value.toLowerCase();

                    if (address.includes('noida') || address.includes('delhi')) {
                        alert('Great news! We deliver to your location in 10 minutes!');
                    } else if (address === '') {
                        alert('Please enter your address or pincode to check delivery availability.');
                    } else {
                        alert('Unfortunately, we do not currently deliver to your location. Stay tuned!');
                    }
                });
            }
        });
    </script>
</body>
</html>
